rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    
    // Users collection - users can only read/write their own document
    match /users/{userId} {
      allow read, write: if request.auth != null && request.auth.uid == userId;
      
      // Validate user document structure on create/update
      allow create: if request.auth != null 
        && request.auth.uid == userId
        && validateUserData(request.resource.data);
      
      allow update: if request.auth != null 
        && request.auth.uid == userId
        && validateUserData(request.resource.data);
    }
    
    // Surveys collection - authenticated users can read/write their own surveys
    match /surveys/{surveyId} {
      allow read: if request.auth != null && resource.data.user_id == request.auth.uid;
      
      allow create: if request.auth != null 
        && request.resource.data.user_id == request.auth.uid
        && validateSurveyData(request.resource.data);
      
      allow update: if request.auth != null 
        && resource.data.user_id == request.auth.uid
        && request.resource.data.user_id == request.auth.uid
        && validateSurveyData(request.resource.data);
      
      allow delete: if request.auth != null && resource.data.user_id == request.auth.uid;
    }
    
    // Helper functions for data validation
    function validateUserData(data) {
      return data.keys().hasAll(['created_at', 'last_login']) &&
             data.created_at is timestamp &&
             data.last_login is timestamp;
    }
    
    function validateSurveyData(data) {
      return data.keys().hasAll([
        'user_id', 'village_name', 'survey_number', 'applicant_name', 
        'mobile_number', 'survey_type', 'total_payment', 
        'received_payment', 'pending_payment', 'status', 'created_at', 'updated_at'
      ]) &&
      data.user_id is string &&
      data.village_name is string &&
      data.survey_number is string &&
      data.applicant_name is string &&
      data.mobile_number is string &&
      data.survey_type in ['Government', 'Private'] &&
      data.status in ['Working', 'Waiting', 'Done'] &&
      data.total_payment is number &&
      data.received_payment is number &&
      data.pending_payment is number &&
      data.total_payment >= 0 &&
      data.received_payment >= 0 &&
      data.received_payment <= data.total_payment &&
      data.created_at is timestamp &&
      data.updated_at is timestamp;
    }
    
    // Default: deny all other access
    match /{document=**} {
      allow read, write: if false;
    }
  }
}
